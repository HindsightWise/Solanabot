{
  "family": "solanabot",
  "containerDefinitions": [
    {
      "name": "solanabot",
      "image": "${IMAGE_URI}",
      "cpu": 1024,
      "memory": 2048,
      "memoryReservation": 1024,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        }
      ],
      "secrets": [
        {
          "name": "RPC_ENDPOINT",
          "valueFrom": "${RPC_ENDPOINT_ARN}"
        },
        {
          "name": "WALLET_KEY",
          "valueFrom": "${WALLET_KEY_ARN}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/solanabot",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "solanabot"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}"
}